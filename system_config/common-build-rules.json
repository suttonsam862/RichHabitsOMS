
{
  "version": "1.0.0",
  "popupDefaults": {
    "autoResize": true,
    "maxHeight": "90vh",
    "scrollOverflow": true,
    "positioning": "centered",
    "responsiveLayout": true
  },
  "formDefaults": {
    "realTimeValidation": true,
    "submitBlockOnError": true,
    "feedbackUI": true
  },
  "modalDefaults": {
    "includeBackdrop": true,
    "escToClose": true
  },
  "tableDefaults": {
    "pagination": true,
    "responsive": true,
    "searchable": true,
    "stickyHeaders": true
  },
  "loadingIndicators": {
    "enableGlobalSpinners": true,
    "asyncAware": true
  },
  "accessibilityStandards": {
    "ariaLabels": true,
    "keyboardNav": true
  }
}
